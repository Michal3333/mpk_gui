<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snoreware.mpk.guiControllers.FailuresController">
   <children>
       <Button fx:id="button" layoutX="454.0" layoutY="309.0" mnemonicParsing="false" prefHeight="63.0" prefWidth="98.0" onAction="#zglos" text="Zgłoś Awarie" />
       <Label fx:id="label" layoutX="485.0" layoutY="196.0" text="Awaria" />
      <TabPane fx:id="tabs" layoutX="36.0" layoutY="25.0" prefHeight="358.0" prefWidth="352.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Awarie Przystanków" onSelectionChanged="#selectStop">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="stopsL" layoutX="5.0" layoutY="6.0" prefHeight="330.0" prefWidth="342.0" onMouseClicked="#stopsClicked" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Awarie Autobusów" onSelectionChanged="#selectBus">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="busesL" prefHeight="326.0" prefWidth="352.0" onMouseClicked="#busesClicked"/>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Awarie Tram" onSelectionChanged="#selectTram">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                            <ListView fx:id="tramsL" prefHeight="326.0" prefWidth="352.0" onMouseClicked="#tramsClicked"/>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
      </TabPane>

   </children>
</AnchorPane>
